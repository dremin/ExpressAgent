<Window x:Class="ExpressAgent.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:GenesysCloudOAuthWebView.Wpf;assembly=GenesysCloudOAuthWebView.Wpf"
        WindowStartupLocation="CenterScreen"
        Title="Genesys Cloud Login"
        Height="600"
        Width="800"
        TextOptions.TextFormattingMode="Display"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid>
        <wv2:OAuthWebView x:Name="AuthBrowser" />
        <TextBlock Text="Connecting to Genesys Cloud..."
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center" />
    </Grid>
</Window>

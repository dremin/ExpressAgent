<UserControl x:Class="ExpressAgent.Controls.UserBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="7">
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left">
            <Ellipse Width="24"
                 Height="24">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding CurrentUser.Images[0].ImageUri}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Text="{Binding CurrentUser.Name}"
                       FontSize="15"
                       VerticalAlignment="Center"
                       Margin="5,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right">
            <TextBlock Text="My Status: "
                       VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Presence.OrgPresences}"
                  SelectedValue="{Binding Presence.CurrentPresence.Id}"
                  SelectedValuePath="Id"
                  DisplayMemberPath="Name"
                  SelectionChanged="PresenceComboBox_SelectionChanged"
                      Width="120"/>
        </StackPanel>
        <StackPanel></StackPanel>
    </DockPanel>
</UserControl>
